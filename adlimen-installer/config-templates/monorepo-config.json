{
  "adlimen": {
    "version": "1.0.0",
    "installedDate": "2025-07-10T12:00:00Z",
    "projectRoot": "/path/to/monorepo",
    "languages": ["javascript", "python"],
    "structure": {
      "frontendDir": "packages/frontend",
      "backendDir": "packages/backend"
    },
    "interface": "both",
    "thresholds": {
      "complexity": 8,
      "maintainability": 75,
      "duplication": 3
    },
    "features": {
      "security": true,
      "gitHooks": true,
      "ciProvider": "github"
    },
    "paths": {
      "configFile": ".adlimen.config.json",
      "scriptsDir": "scripts/adlimen",
      "reportsDir": "reports",
      "eslintConfigsDir": ".eslint-configs"
    },
    "environments": {
      "development": {
        "thresholds": {
          "complexity": 12,
          "maintainability": 65
        }
      },
      "production": {
        "thresholds": {
          "complexity": 6,
          "maintainability": 85
        }
      }
    }
  }
}